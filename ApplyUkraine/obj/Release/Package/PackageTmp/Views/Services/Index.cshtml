@using ApplyUkraine.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="head">
    <div class="container">
        <div class="image">
            <nav class="navbars">
                <div class="row">
                    <div class="col-lg-2 col-md-3">
                        <div class="logo">
                            <a href="#">
                                <div class="image">
                                    <img src="~/Public/images/apply-ukraine-logo.png" alt="">
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10 col-md-9 d-flex">
                        <div class="btn-menu">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="menu">
                            <ul class="navs-menu">
                                <li class="navs-item active">
                                    <a href="@Url.Action("index","home")" class="navs-a">Home</a>
                                </li>
                                <li class="navs-item">
                                    <a class="navs-a">
                                        About Us
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menus" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a href="@Url.Action("index","aboutUs")">About Us</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","services")">Services</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","faqs")">Faqs</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","blog")">Blog</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="navs-item">
                                    <a href="#" class="navs-a">
                                        Ukraine universiyies
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menus" aria-labelledby="navbarDropdown">
                                        @foreach (University item in ViewBag.Universities)
                                        {
                                            <li>
                                                <a href="@Url.Action("index","universities",new { id = item.Id })">@item.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li class="navs-item">
                                    <a href="@Url.Action("index","contact")" class="navs-a">Contact</a>
                                </li>
                            </ul>
                        </div>
                        <div class="btn">
                            <a href="@Url.Action("index","applicationform")">
                                <span>Application form</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="item">
                <div class="text-head">
                    <h1>OUR SERVICES</h1>
                </div>
            </div>
            <div class="content-page">
                <ul class="list">
                    <li>
                        <a href="@Url.Action("index","home")">Home</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("index","services")">Services</a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
    </div>
</header>
<section class="our-services">
    <div class="container">
        <div class="services">
            <div class="head-text">
                <h4>
                    Your benefits when you choose
                    <a href="#">‘Apply Ukraine’</a>
                </h4>
            </div>
            <div class="services-box">
                <div class="row">
                    @foreach(Image item in ViewBag.ourServices)
                    {
                    <div class="col-lg-3 col-md-6">
                        <div class="box">
                            <div class="image">
                                <img src="~/Public/images/@item.Name" alt="">
                            </div>
                            <div class="text">
                                @Html.Raw(item.About.Text)
                                
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
            <div class="general">
                <div class="icon">
                    <i class="fas fa-sign-in-alt"></i>
                </div>
                <div class="text">
                    <p class="header">
                        @ViewBag.ourServiceGeneral.Header
                    </p>
                    <p class="description">
                        @ViewBag.ourServiceGeneral.Text
                    </p>
                    <p class="specialist">
                        Toghrul Mahmudli
                        <br>Marketing specialist | Apply Ukraine
                    </p>
                    <div class="btn-demo">
                        <a href="">FILL THE APPLICATION FORM</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

