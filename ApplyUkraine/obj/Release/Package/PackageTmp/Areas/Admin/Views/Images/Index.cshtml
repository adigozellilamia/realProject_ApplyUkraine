@model IEnumerable<ApplyUkraine.Models.Image>

@{
    ViewBag.Title = "Images";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 style="color: #716aca;">Index</h3>

<p>
    @Html.ActionLink("Create New", "Create", "images", null, new { @class = "btn btn-brand" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blog.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.University.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="/Public/images/@Html.DisplayFor(modelItem => item.Name)" width="100"/> 
        </td>
        <td style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.About.Header)
        </td>
        <td style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Blog.Name)
        </td>
        <td style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.University.Name)
        </td>
        <td style="vertical-align: middle;">
            <span style="display:block;">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </span>
            <span style="display:block;">@Html.ActionLink("Details", "Details", new { id = item.Id }) </span>
            <span style="display:block;">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>
        </td>
    </tr>
}

</table>
