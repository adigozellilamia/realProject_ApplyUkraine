@using ApplyUkraine.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="head">
    <div class="container">
        <div class="image">
            <nav class="navbars">
                <div class="row">
                    <div class="col-lg-2 col-md-3">
                        <div class="logo">
                            <a href="index.html">
                                <div class="image">
                                    <img src="~/Public/images/apply-ukraine-logo.png" alt="">
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10 col-md-9 d-flex">
                        <div class="btn-menu">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="menu">
                            <ul class="navs-menu">
                                <li class="navs-item active">
                                    <a href="@Url.Action("index","home")" class="navs-a">Home</a>
                                </li>
                                <li class="navs-item">
                                    <a class="navs-a">
                                        About Us
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menus" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a href="@Url.Action("index","aboutUs")">About Us</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","services")">Services</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","faqs")">Faqs</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("index","blog")">Blog</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="navs-item">
                                    <a href="#" class="navs-a">
                                        Ukraine universiyies
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menus" aria-labelledby="navbarDropdown">
                                        @foreach (University item in ViewBag.Universities)
                                        {
                                            <li>
                                                <a href="@Url.Action("index","universities",new { id = item.Id })">@item.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li class="navs-item">
                                    <a href="@Url.Action("index","contact")" class="navs-a">Contact</a>
                                </li>
                            </ul>
                        </div>
                        <div class="btn">
                            <a href="@Url.Action("index","applicationform")">
                                <span>Application form</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="item blog-item">
                <div class="text-head">
                    <h1>BLOG</h1>
                </div>
            </div>
            <div class="content-page">
                <ul class="list">
                    <li>
                        <a href="@Url.Action("index","home")">Home</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("index","blog")">Blog</a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
    </div>
</header>
<section class="blog">
    <div class="container">
        @foreach (Image item in ViewBag.Blogs)
        {
         
            <div class="blog-box">
                <div class="row">
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        <div class="image">
                            <a href="@Url.Action("index","blogapply",new {id=item.BlogId })">
                                <img src="~/Public/images/@item.Name" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-12">
                        <div class="text">
                            <div class="header">
                                <h1 class="date">26</h1>
                                <span>January</span>
                            </div>
                            <div class="comment">
                                <h2>
                                    <a href="">@item.Blog.Header</a>
                                </h2>
                                <ul class="list">
                                    <li>
                                        <span>Posted by</span>
                                        <a href="">Apply ukraine</a>
                                    </li>
                                    <li>
                                        <span>Categories</span>
                                        <a href="">Blog</a>
                                    </li>
                                    <li>
                                        <span>Comments</span>
                                        <a href="">0 comment</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="description">
                                <p>
                                    @item.Blog.Text
                                </p>
                            </div>
                            <div class="btn-demo">
                                <a href="">Read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

