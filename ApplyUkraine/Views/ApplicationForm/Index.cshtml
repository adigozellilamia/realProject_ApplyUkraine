                        *@
                        <form method="post" action="@Url.Action("AddForm","ApplicationForm" ,new { id = ViewBag.User.Id })" enctype="multipart/form-data" autocomplete="off" class="form appform-validation">
                            <div class="input">
                                <p>
                                    First name
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="FirstName" value="@ViewBag.User.Name" required>
                            </div>
                            <div class="input">
                                <p>
                                    Last Name
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="LastName" value="@ViewBag.User.Surname" required>
                            </div>
                            <div class="input">
                                <p>
                                    Date of birth
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="date" name="Birthday" value="@(ViewBag.User.Birthday != null?ViewBag.User.Birthday:null ) " required>
                            </div>
                            <div class="input">
                                <p>
                                    Email
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="Email" value="@ViewBag.User.Email" required>
                            </div>
                            <div class="input">
                                <p>

                                    Mobile phone
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="MobilPhone" required placeholder="Country code (Mobile Operator Code) Phone number / Example +380 (50) 2460159">
                            </div>
                            <div class="input">
                                <p>Instant messaging services registered with your mobile number</p>
                                <div class="checkbox">
                                    <input id="whatsapp" name="checkbox1" SocialNetworks value="Whatsapp" type="checkbox">
                                    <label for="whatsapp">Whatsapp</label>
                                </div>
                                <div class="checkbox">
                                    <input id="viber" SocialNetworks name="checkbox2" value="Viber" type="checkbox">
                                    <label for="viber">Viber</label>
                                </div>
                                <div class="checkbox">
                                    <input id="telegram" name="checkbox3" value="Telegram" SocialNetworks type="checkbox">
                                    <label for="telegram">Telegram</label>
                                </div>
                            </div>
                            <div class="input">
                                <p>Skype (if available)</p>
                                <input type="text" name="Skype">
                            </div>
                            @* ============================================================
                                   COUNTRIES API ---START
                                =============================================================*@
                            <div class="input">
                                <p>
                                    Country of Citizenship
                                    <span class="clr-red">*</span>
                                </p>
                                <select name="CountryCitizen" id="CountryCitizen">
                                    <option value="">@(ViewBag.AppForm == null ? "Country" : ViewBag.AppForm.CountryCitizen)</option>
                                </select>
                            </div>
                            <div class="input">
                                <p>
                                    Country of Living
                                    <span class="clr-red">*</span>
                                </p>
                                <select name="CountryLiving" id="CountryLiving">
                                    <option value="1">@(ViewBag.AppForm == null ? "Country" : ViewBag.AppForm.CountryLiving)</option>
                                </select>
                            </div>

                            <div class="input">
                                <p>
                                    City
                                    <span class="clr-red">*</span>
                                </p>
                                <select name="Cities" id="Cities">
                                    <option value="1">@(ViewBag.AppForm == null ? "City" : ViewBag.AppForm.Cities)</option>
                                </select>
                            </div>

                            @* ============================================================
                                   COUNTRIES API ---END
                                =============================================================*@

                            <!--============================================================
                               UNIVERSITY-FACULTY-COURSE API ---START
                            =============================================================-->
                            <div class="input">
                                <p>
                                    University
                                    <span class="clr-red">*</span>
                                </p>
                                <select name="UniversityId" id="Universities">
                                    <option value="0">@(ViewBag.University == null ? "Country" : ViewBag.University.Name)</option>

                                    @foreach (var item in ViewBag.Universities)
                                    {

                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="input">
                                <p>
                                    Faculty
                                    <span class="clr-red">*</span>
                                </p>
                                <select id="Faculties">
                                    <option value="@(ViewBag.Faculty!=null? ViewBag.Faculty.Id:0)">@(ViewBag.Faculty != null ? ViewBag.Faculty.Name : "Faculty")</option>
                                </select>
                            </div>
                            <div class="input">
                                <p>
                                    Course
                                    <span class="clr-red">*</span>
                                </p>
                                <select name="CoursId" id="Courses">
                                    <option value="">@(ViewBag.Course != null ? ViewBag.Course.Name : "Course")</option>
                                </select>
                            </div>

                            <!--============================================================
                               UNIVERSITY-FACULTY-COURSE API ---END
                            =============================================================-->

                            <div class="input">
                                <p>
                                    Address to ship an invitation letter
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="InvitationLetterAddress" value="@(ViewBag.User.Address != null?ViewBag.User.Address:null ) " required>
                            </div>
                            <div class="input">
                                <p>
                                    Zip
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text" name="ZipCode" value="@(ViewBag.User.ZipCode != null?ViewBag.User.ZipCode :null ) " required>
                            </div>
                            <div class="input">
                                <p>

                                    Degree you apply for
                                    <span class="clr-red">*</span>
                                </p>
                                @foreach (Degree item in ViewBag.degree)
                                {
                                    <div class="form-check">
                                        <input name="Degree" id="rd-1" value="@item.Id" type="radio">
                                        <label for="rd-1">@item.Name</label>
                                    </div>
                                }
                               
                               
                            </div>
                            <div class="input">
                                <p>
                                    Language that you want to study in
                                    <span class="clr-red">*</span>
                                </p>
                                <div class="form-check">
                                    <input name="Language" id="rd-4" value="English" type="radio">
                                    <label for="rd-4">English</label>
                                </div>
                                <div class="form-check">
                                    <input name="Language" id="rd-5" value="Russian" type="radio">
                                    <label for="rd-5">Russian</label>
                                </div>
                            </div>
                            <div class="input">
                                @if (Session["selectError"] != null)
                                {
                                    <p>You must select your file</p>
                                }
                                @if (Session["typeerror"] != null)
                                {
                                    <p>Your file must be word or pdf</p>
                                }
                                @if (Session["sizeerror"] != null)
                                {
                                    <p>Your file size must be max 5mb</p>
                                }
                                <p>
                                    Upload Passport:
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="file" name="passportFile" id="file" required />

                            </div>
                            <div class="input">

                                <p>
                                    School Certificate:
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="file" name="certificateFile" id="file" required />

                            </div>
                            <div class="input">

                                <p>
                                    Course you are applying for
                                    <span class="clr-red">*</span>
                                </p>
                                <input type="text">
                            </div>
                            <button type="submit" class="btn-demo" style="    background-color: transparent;border: none;color: white;"><a> Submit</a></button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

