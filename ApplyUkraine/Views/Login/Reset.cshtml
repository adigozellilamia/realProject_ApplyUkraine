    <div class="limiter">
        <div class="container-login100" style="background-color:#ffb605;">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">


                @if (Session["ExistEmail"] == null)
                {
                    <form method="post" action="@Url.Action("SendConfirmMail")" class="login100-form validate-form flex-sb flex-w">
                        <span class="login100-form-title">
                            Reset your password
                        </span>
                        @if (Session["emptyEmail"] != null)
                        {
                            <span class="login100-form-title " style="margin-top:15px;">
                                Email is not empty
                            </span>

                        }
                        <div class="p-t-31 p-b-9">
                            <span class="txt1">
                                Email
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Email is required">
                            <input class="input100" id="forgotMail" type="email" name="Email">
                            <span class="focus-input100"></span>
                        </div>

                        @if (Session["NonExistEmail"] != null)
                        {
                            <div class="alert alert-danger">@Session["NonExistEmail"]</div>
                            Session["NonExistEmail"] = null;
                        }
                        @if (Session["TokenSend"] != null)
                        {
                            <div class="alert alert-danger" style="margin-top:10px;">@Session["TokenSend"]</div>
                            Session["TokenSend"] = null;
                        }


                        <div class="container-login100-form-btn m-t-17">
                            <button type="submit" class="login100-form-btn">
                                Send Confirm message
                            </button>
                        </div>
                    </form>

                }

                @if (Session["ExistEmail"] != null)
                {
                    <h1>We sent e-mail to you for resetting your password.</h1>
                    Session["ExistEmail"] = null;
                }

