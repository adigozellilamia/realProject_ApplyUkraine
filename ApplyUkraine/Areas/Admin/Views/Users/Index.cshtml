@model IEnumerable<ApplyUkraine.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3 style="color: #716aca;">Index</h3>

@*<p>
        @Html.ActionLink("Create New", "Create", "Users", null, new { @class = "btn btn-brand" })
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.TelNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ApplicationForm.Email)
            </th>*@

        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td style="vertical-align: middle;">
                @if (item.Email != null)
                {
                    @Html.Raw(item.Email.Length > 10 ? item.Email.Substring(0, 10) + "..." : item.Email)
                }
            </td>
            @*<td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.TelNumber)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td style="vertical-align: middle;">
                @if (item.Address != null)
                {
                    @Html.Raw(item.Address.Length > 10 ? item.Address.Substring(0, 10) + "..." : item.Address)
                }
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            
            @*<td style="vertical-align: middle;">
                    @if (item.ApplicationForm.Email != null)
                    {
                        @Html.Raw(item.ApplicationForm.Email.Length > 10 ? item.ApplicationForm.Email.Substring(0, 10) + "..." : item.ApplicationForm.Email)
                    }
                    else if(item.ApplicationForm.Email==null){
                        @Html.Raw(item.ApplicationForm.Email)
                    }
                </td>*@
            <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td style="vertical-align: middle;">
                <span style="display:block;">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </span>
                <span style="display:block;">@Html.ActionLink("Details", "Details", new { id = item.Id }) </span>
                <span style="display:block;">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>
            </td>
        </tr>
    }

</table>