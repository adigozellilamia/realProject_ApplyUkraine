@model IEnumerable<ApplyUkraine.Models.About>

@{
    ViewBag.Title = "Abouts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 style="color: #716aca;">Index</h3>

<p>
    @Html.ActionLink("Create New", "Create", "abouts", null, new { @class = "btn btn-brand" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Button)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SectionName.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="vertical-align: middle;">
            @if (item.Header != null)
            {
                @Html.Raw(item.Header.Length > 50 ? item.Header.Substring(0, 50) + "..." : item.Header)
                }

        </td>
        <td style="vertical-align: middle;">
            @if (item.Text != null)
            {

                @Html.Raw(item.Text.Length > 75 ? item.Text.Substring(0, 75) + "..." : item.Text)
            }

        </td>
        <td style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Button)
        </td>
        <td style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.SectionName.Name)
        </td>
        <td style="vertical-align: middle;">
            <span style="display:block;">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </span>
            <span style="display:block;">@Html.ActionLink("Details", "Details", new { id = item.Id }) </span>
            <span style="display:block;">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>
        </td>
    </tr>
}

</table>
